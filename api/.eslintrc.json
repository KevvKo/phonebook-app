{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            1, 
            { 
                "vars": "all", 
                "args": "after-used", 
                "ignoreRestSiblings": false 
            }
        ],
        "quotes": [1, "single"],
        "semi": [1, "always"]
    }
}
