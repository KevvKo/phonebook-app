{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "globals": {
        "require": true,
        "module": true
    },
    "plugins": ["@graphql-eslint"],
    "rules": {
        "no-unused-vars": [
            1, 
            { 
                "vars": "all", 
                "args": "after-used", 
                "ignoreRestSiblings": false 
            }
        ],
        "quotes": [ 1, "single"],
        "semi": [ 1, "always"],
        "object-curly-spacing": [1, "always"],
        "array-bracket-spacing": [1, "always"]
    }
}
