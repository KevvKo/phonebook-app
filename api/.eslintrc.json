{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warning", 
            { 
                "vars": "all", 
                "args": "after-used", 
                "ignoreRestSiblings": false 
            }
        ]
    }
}
